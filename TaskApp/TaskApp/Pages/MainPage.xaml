<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskApp.Pages.MainPage"
             Title="Начальная страница">

    <VerticalStackLayout Padding="30,0" Spacing="25">

        <Image Source="dotnet_bot.png" HeightRequest="185" Aspect="AspectFit" SemanticProperties.Description="dot net bot in a hovercraft number nine" />
        <Label
            Text="Hello! This is Task app"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />

        <Label
            Text="To go on Task view, click on the list on the left corner."
            Style="{StaticResource SubHeadline}"/>

        <Label
             Text="Or use this shortcuts:"
             Style="{StaticResource SubHeadline}"/>

        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Task view" Margin="0,5,5,0" Clicked="ToTaskView"/>
            <Button Text="Create task" Margin="0,5,5,0" Clicked="ToCreateTask"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>