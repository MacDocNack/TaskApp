<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskApp.Pages.EditTask"
             Title="EditTask">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Task name"/>
        <Entry x:Name="TaskName"/>
        <Label Text="Description (optional)"/>
        <Entry x:Name="TaskDescription"/>
        <Label Text="Date and time"/>
        <HorizontalStackLayout>
            <DatePicker x:Name="TaskDate"/>
            <TimePicker x:Name="TaskTime"/>
        </HorizontalStackLayout>
        <Label Text="Priority"/>
        <Picker x:Name="PriorityPicker"/>
        <Label Text="Category (optional)"/>
        <Entry x:Name="Category"/>
        <Label Text="State"/>
        <CheckBox x:Name="State"/>
        <Button Text="Update Task" Margin="0,30,0,0" Clicked="UpdateTask"/>
        <Button Text="Clear all" Margin="0,5,0,0" Clicked="UpdateTask"/>
    </VerticalStackLayout>
</ContentPage>